@page
@model StudentsModel
<h1>Student List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Surname</th>
            <th>Title</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.Surname</td>
                <td>@student.Title</td>
                <td>@student.Email</td>
            </tr>
        }
    </tbody>
</table>
